{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2023"],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "composite": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "tsBuildInfoFile": "./node_modules/.cache/tsbuildinfo.json"
    },
    "include": ["vite.config.ts"]
}
